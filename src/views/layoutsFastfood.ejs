    <script>
      function autoHeader() {
        let scrollTop = document.documentElement.scrollTop;
        let header = document.getElementById("header");
        let navThree = document.getElementById("navbar-three");
        let logoLafka = document.getElementById("logo-lafka");
        let phoneNumber = document.getElementById("phone-number");
        let cartOptions = document.getElementById("cart-options");
        if (scrollTop >= 40) {
          header.classList.add("active");
          logoLafka.classList.add("active");
          phoneNumber.classList.add("active");
          cartOptions.classList.add("active");
        } else {
          header.classList.remove("active");
          logoLafka.classList.remove("active");
          phoneNumber.classList.remove("active");
          cartOptions.classList.remove("active");
        }
        if (scrollTop >= 10) {
          navThree.classList.add("active");
        } else {
          navThree.classList.remove("active");
        }

        console.log(scrollTop);
      }
      window.addEventListener("scroll", () => {
        autoHeader();
      });
    </script>

