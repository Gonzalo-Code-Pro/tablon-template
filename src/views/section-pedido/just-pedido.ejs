<style>
 .track-delivery-status .container {
      width:800px;
      margin: 100px auto; 
  }
  .track-delivery-status   .progressbar {
      counter-reset: step;
  }
   .track-delivery-status   .progressbar li {
      list-style-type: none;
      width: 20%;
      float: left;
      font-size: 12px;
      position: relative;
      text-align: center;
      text-transform: uppercase;
      color: #7d7d7d;
  }
   .track-delivery-status  .progressbar li:before {
      width: 70px;
      height: 70px;
      content: counter(step);
      counter-increment: step;
      line-height: 30px;
      border: 2px solid #7d7d7d;
      display: block;
      text-align: center;
      margin: 0 auto 10px auto;
      border-radius: 50%;
      background-color: white;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
  }
  .track-delivery-status   .progressbar li:after {
      width: 100%;
      height: 8px;
      content: '';
      position: absolute;
      background-color: #7d7d7d;
      top: 30px;
      left: -50%;
      z-index: -1;
  }
  .track-delivery-status   .progressbar li:first-child:after {
      content: none;
  }
   .track-delivery-status   .progressbar li.active {
      color: green;
  }
   .track-delivery-status   .progressbar li.active:before {
      border-color: #55b776;
  }
   .track-delivery-status   .progressbar li.active + li:after {
      background-color: #55b776;
  }
